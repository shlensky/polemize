<% title @question.page_title || @question.title %>
<% meta_description @question.meta_description %>
<% meta_keywords @question.meta_keywords %>

<h1><%= @question.title %></h1>
<%= image_tag @question.image.url, alt: @question.title if @question.image.present? %>
<%= @question.description.html_safe %>

<h2><%= @question.pros_title %></h2>
<ul>
  <% @question.pros.each do |pro| %>
    <li>
      <h2><%= pro.title %></h2>
      <p><%= pro.description %></p>
    </li>
  <% end %>
</ul>

<h2><%= @question.cons_title %></h2>
<ul>
  <% @question.cons.each do |con| %>
    <li>
      <h2><%= con.title %></h2>
      <p><%= con.description %></p>
    </li>
  <% end %>
</ul>

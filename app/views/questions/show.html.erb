<h1><%= @question.title %></h1>
<%= @question.description.html_safe %>

<h2><%= @question.pros_title %></h2>
<ul>
  <% @question.pros.each do |pro| %>
    <li>
      <h2><%= pro.title %></h2>
      <p><%= pro.description %></p>
    </li>
  <% end %>
</ul>

<h2><%= @question.cons_title %></h2>
<ul>
  <% @question.cons.each do |con| %>
    <li>
      <h2><%= con.title %></h2>
      <p><%= con.description %></p>
    </li>
  <% end %>
</ul>
